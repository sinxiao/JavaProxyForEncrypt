<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_back_FFFAFAFA"
    android:elevation="@dimen/elevation_height"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/navigation_header_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@color/colorAccent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userimage"
            android:layout_width="@dimen/user_image_size"
            android:layout_height="@dimen/user_image_size"
            android:src="@drawable/userimage"
            app:civ_border_color="@color/transparent_3cffffff"
            app:civ_border_width="@dimen/userimage_border_width"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_8dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/username"
            android:textSize="@dimen/text_size_mid"/>

    </LinearLayout>

    <com.pandaq.pandaeye.widget.NavItem
        android:id="@+id/nav_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_item"
        app:action="我的收藏"
        app:startIcon="@drawable/ic_favorite"
        app:tint="@color/colorPrimary"/>

    <View
        style="@style/Spliter"/>

    <com.pandaq.pandaeye.widget.NavItem
        android:id="@+id/nav_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_item"
        app:action="我的视频"
        app:startIcon="@drawable/ic_action_download"
        app:tint="@color/colorPrimary"/>

    <View
        style="@style/Spliter"/>

    <com.pandaq.pandaeye.widget.NavItem
        android:id="@+id/nav_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_item"
        app:action="分享应用"
        app:startIcon="@drawable/ic_menu_share"
        app:tint="@color/colorPrimary"/>

    <View
        style="@style/Spliter"/>

    <com.pandaq.pandaeye.widget.NavItem
        android:id="@+id/nav_clean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_item"
        app:action="@string/clean_chace"
        app:startIcon="@drawable/ic_clear_all"
        app:tint="@color/colorPrimary"/>

    <View
        style="@style/Spliter"/>

    <com.pandaq.pandaeye.widget.NavItem
        android:id="@+id/nav_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_item"
        app:action="关于"
        app:startIcon="@drawable/ic_action_github"
        app:tint="@color/colorPrimary"/>
</LinearLayout>